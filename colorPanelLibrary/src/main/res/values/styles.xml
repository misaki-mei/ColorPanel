<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dialog_btn">
        <item name="android:textColor">@color/colorPanelDarkGrey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="rgb_panel_seek_text">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="rgb_panel_seek_layout">
        <item name="android:padding">8dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="rc_dialog" parent="Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/bg_rc_layout</item>
    </style>
</resources>