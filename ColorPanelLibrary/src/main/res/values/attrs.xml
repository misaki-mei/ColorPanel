<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ColorPanelView">
        <attr name="default_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="ColorDisplayView">
        <attr name="color1" format="color"/>
        <attr name="color2" format="color"/>
        <attr name="color_data" format="reference"/>
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
        <attr name="gird_row" format="integer"/>
        <attr name="gird_column" format="integer"/>
        <attr name="gird_space" format="dimension"/>
        <attr name="rect_radius" format="dimension"/>
        <attr name="transition_angle" format="integer"/>
        <attr name="display_mode" format="enum">
            <enum name="single_color" value="0"/>
            <enum name="multi_color" value="1"/>
            <enum name="transition_color" value="2"/>
        </attr>
        <attr name="transition_mode" format="enum">
            <enum name="linear" value="0"/>
            <enum name="radial" value="1"/>
            <enum name="sweep" value="2"/>
        </attr>
        <attr name="mask_shape" format="enum">
            <enum name="rect" value="0"/>
            <enum name="round_rect" value="1"/>
            <enum name="circle" value="2"/>
        </attr>
    </declare-styleable>
</resources>